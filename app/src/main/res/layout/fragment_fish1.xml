<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.fish.FishFragment1">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ACgreen"
        android:visibility="visible"
        app:cardCornerRadius="15dp"
        app:cardElevation="1dp"

        app:cardUseCompatPadding="true"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ACgreenClaro">

            <TextView
                android:id="@+id/rareza"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="TextView"
                android:textSize="17dp"
                app:layout_constraintEnd_toStartOf="@+id/fishId"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fishId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="TextView"
                android:textSize="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/rareza"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/precioFish"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="TextView"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rareza" />

            <ImageView
                android:id="@+id/bolsaDinero1"
                android:layout_width="32dp"
                android:layout_height="36dp"
                app:layout_constraintBottom_toBottomOf="@+id/precioFishCJ"
                app:layout_constraintEnd_toStartOf="@+id/fishShadow"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/precioFishCJ"
                app:layout_constraintTop_toTopOf="@+id/precioFishCJ"
                app:layout_constraintVertical_bias="0.7"
                app:srcCompat="@drawable/bolsa_mediana" />

            <TextView
                android:id="@+id/localizacion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:text="TextView"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/rareza"
                app:layout_constraintTop_toBottomOf="@+id/fishId" />

            <TextView
                android:id="@+id/precioFishCJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="TextView"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/precioFish" />

            <ImageView
                android:id="@+id/bolsaDinero2"
                android:layout_width="32dp"
                android:layout_height="36dp"
                app:layout_constraintBottom_toBottomOf="@+id/precioFish"
                app:layout_constraintStart_toEndOf="@+id/precioFish"
                app:layout_constraintTop_toTopOf="@+id/precioFish"
                app:layout_constraintVertical_bias="0.7"
                app:srcCompat="@drawable/bolsa_mediana" />

            <TextView
                android:id="@+id/fishShadow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="TextView"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/rareza"
                app:layout_constraintTop_toBottomOf="@+id/localizacion" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>