<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.bugs.BugFragment1">

    <!-- TODO: Update blank fragment layout -->





    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:visibility="visible"
        app:cardCornerRadius="15dp"
        app:cardElevation="1dp"

        app:cardUseCompatPadding="true"
        tools:visibility="visible">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bichosC">

            <TextView
                android:id="@+id/rareza"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/ACbg"
                android:text="TextView"
                android:textSize="17dp"
                app:layout_constraintEnd_toStartOf="@+id/bugId"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bugId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="TextView"
                android:textSize="17dp"
                android:textColor="@color/ACbg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/rareza"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/precioBug"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="TextView"
                android:textColor="@color/ACbg"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rareza" />

            <ImageView
                android:id="@+id/bolsaDinero1"
                android:layout_width="32dp"
                android:layout_height="36dp"
                app:layout_constraintBottom_toBottomOf="@+id/precioBugFlick"
                app:layout_constraintStart_toEndOf="@+id/precioBugFlick"
                app:layout_constraintTop_toTopOf="@+id/precioBugFlick"
                app:layout_constraintVertical_bias="0.7"
                app:srcCompat="@drawable/bolsa_mediana" />

            <TextView
                android:id="@+id/precioBugFlick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="TextView"
                android:textColor="@color/ACbg"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/precioBug" />

            <ImageView
                android:id="@+id/bolsaDinero2"
                android:layout_width="32dp"
                android:layout_height="36dp"
                app:layout_constraintBottom_toBottomOf="@+id/precioBug"
                app:layout_constraintStart_toEndOf="@+id/precioBug"
                app:layout_constraintTop_toTopOf="@+id/precioBug"
                app:layout_constraintVertical_bias="0.7"
                app:srcCompat="@drawable/bolsa_mediana" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



</FrameLayout>